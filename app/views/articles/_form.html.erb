<% content_for :head do %>

    <!--title></title -->
    <%= stylesheet_link_tag("jHtmlArea") %>
    <%= javascript_include_tag("jHtmlArea-0.7.5") %>
    <%= javascript_include_tag("texteditor") %>

<% end %>



<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :headline %><br />
    <%= f.text_field :headline %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :version %><br />
    <%= f.text_field :version %>
  </div>

  <% status_list = {'Draft' => 'Draft', 'Approved' => 'Approved', 'Published' => 'Published'} %>
  <div class="field">
    <%= f.label :status %><br />
    <!--%= f.text_field :status %-->
    <%= f.select :status, status_list %>
  </div>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area(:text, :rows => 20, :class => '.span8') %>
  </div>
  
  <div class="field">
  	<%= f.label :magazine_id %><br />
  	<!--%= f.select :magazine_id, Magazine.find(:all, :order => "name, date").collect{|s|
  		[(s.name + " " + s.date.to_s), s.id]} %-->
    <%= f.select :magazine_id, Magazine.order("name, date").all.collect{|s|
      [(s.name + " " + s.date.to_s), s.id]} %>
  </div>

  <div class="field">
    <%= f.label :grid_id %><br />
    <%= f.select :grid_id, Grid.find(:all, :order => "name").collect{|s|
        [(s.name), s.id]} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
