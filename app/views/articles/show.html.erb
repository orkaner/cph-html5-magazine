    <p id="notice"><%= notice %></p>

    <p>
      <b>Title:</b>
      <%= @article.title %>
    </p>

    <p>
      <b>Author:</b>
      <%= @article.author %>
    </p>

    <p>
      <b>Headline:</b>
      <%= @article.headline %>
    </p>

    <p>
      <b>Date:</b>
      <%= @article.date %>
    </p>

    <p>
      <b>Version:</b>
      <%= @article.version %>
    </p>

    <p>
      <b>Status:</b>
      <%= @article.status %>
    </p>

    <% if @article.assets.exists? %>
        <h3>Attached Files</h3>
        <div class="assets">

          <% @article.assets.each do |asset| %>
              <p>
                <%= link_to File.basename(asset.asset_file_name), asset.asset.url %>
                <%= image_tag asset.dynamic_asset_url("100x100>") %>
              </p>

              <p>
                <small><%= number_to_human_size(asset.asset.size) %></small>
              </p>
              <!--
               </div>
                -->
          <% end %>
        </div>

    <% end %>
    <p>
      <b>Text:</b>
    </p>
    <div class="well">
      <%= strip_tags(sanitize HTML_Truncator.truncate(@article.text, 50)) %>
    </div>

    <p>
      <b>Videos:</b>
    </p>
    <ol>
      <% for videolink in @article.videolinks %>
          <li><%= h videolink.title %> (<%= videolink.video_src %>)</li>
      <% end %>
    </ol>


	<% content_for :contextual_menu do %>
		<li><%= link_to 'Back', articles_path %></li>
    	<li><%= link_to 'Edit', edit_article_path(@article) %></li>
    	<li><%= link_to 'Preview', preview_article_path(@article), :target => '_blank' %></li>
    
	<% end %>
    


