<%= form_for(@magazine) do |f| %>
  <% if @magazine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@magazine.errors.count, "error") %> prohibited this magazine from being saved:</h2>

      <ul>
      <% @magazine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :volume %><br />
    <%= f.number_field :volume %>
  </div>
  <div class="field">
    <%= f.label :number %><br />
    <%= f.number_field :number %>
  </div>

  <% status_list = {'Not Published' => 'Not Published', 'Published' => 'Published'} %>
  <div class="field">
    <%= f.label :status %><br />
    <!--%= f.text_field :status %-->
    <%= f.select :status, status_list %>
  </div>

    <div class="field">
      <%= f.label :magtemplate_id %><br />
      <%= f.select :magtemplate_id, Magtemplate.find(:all, :order => "name").collect{|s|
        [(s.name), s.id]} %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
