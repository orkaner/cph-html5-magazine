<h1>Listing sizes</h1>

<table class="table">
  <tr>
    <th>Magtemplate</th>
    <th>Width</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sizes.each do |size| %>
  <tr>
    <td><%= size.magtemplate.name %></td>
    <td><%= size.width.name %></td>
    <td><%= size.value %> px</td>
    <td><%= link_to 'Show', size %></td>
    <td><%= link_to 'Edit', edit_size_path(size) %></td>
    <td><%= link_to 'Destroy', size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

