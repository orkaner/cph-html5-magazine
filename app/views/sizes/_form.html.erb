<%= form_for @size, :html=>{:class=>'form-horizontal'}  do |f| %>
    <% if @size.errors.any? %>
    <div class="alert alert-error" id="error_explanation">
      <h2><%= pluralize(@size.errors.count, "error") %> prohibited this size from being saved:</h2>

      <ul>
      <% @size.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="control-group">
      <%= f.label :magtemplate_id,:class=>"control-label" %>
      <div class="controls">
        <%= f.select :magtemplate_id, Magtemplate.order("name").collect{|s| [(s.name), s.id]} %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :width_id,:class=>"control-label" %>
      <div class="controls">
        <%= f.select :width_id, Width.order("name").collect{|s| [(s.name), s.id]} %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :value,:class=>"control-label" %>
      <div class="controls">
        <%= f.number_field :value %>
      </div>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
